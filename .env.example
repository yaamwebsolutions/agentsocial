# =============================================================================
# DEEPSEEK AI (Primary LLM)
# =============================================================================
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com

# =============================================================================
# LOGGING
# =============================================================================
BACKEND_LOG_LEVEL=INFO

# =============================================================================
# EMAIL (Resend)
# =============================================================================
RESEND_API_KEY=

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/agent_twitter

# =============================================================================
# KlingAI (Video & Image Generation)
# =============================================================================
KLINGAI_ACCESS_KEY=
KLINGAI_SECRET_KEY=
KLINGAI_API_URL=https://api-singapore.klingai.com

# =============================================================================
# STOCK VIDEO/IMAGES
# =============================================================================
PEXELS_API_KEY=your-pexels-key
PIXABAY_API_KEY=your-pixabay-key
UNSPLASH_ACCESS_KEY=your-unsplash-key

# =============================================================================
# MCP (Model Context Protocol)
# =============================================================================
MCP_SERVER_ENABLED=false
MCP_SERVER_PORT=8000
MCP_SERVER_TRANSPORT=http
MCP_AUTH_ENABLED=false
MCP_AUTH_PROVIDER=google

# =============================================================================
# BACKEND AS A SERVICE (Supabase - Self-Hosted)
# =============================================================================
SUPABASE_URL=http://localhost:8000
SUPABASE_ANON_KEY=your-local-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-local-service-role-key
SUPABASE_DB_URL=postgresql://postgres:postgres@localhost:54322/postgres
SUPABASE_STUDIO_URL=http://localhost:3000
SUPABASE_GATEWAY_URL=http://localhost:8080

# =============================================================================
# ANALYTICS & TRACKING (Google)
# =============================================================================
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# =============================================================================
# WEB SCRAPING (ScraperAPI)
# =============================================================================
SCRAPERAPI_KEY=
SCRAPERAPI_URL=https://api.scraperapi.com

# =============================================================================
# SEARCH API (Serper.dev - Google Search)
# =============================================================================
SERPER_API_KEY=
SERPER_API_URL=https://google.serper.dev/search

# =============================================================================
# VIDEO RENDERING (Yaam.ai)
# =============================================================================
YAAM_API_URL=https://yaam.ai
YAAM_RENDER_FROM_URLS=
YAAM_RENDER_FROM_PEXELS=
YAAM_DOWNLOAD=

# =============================================================================
# APPLICATION CONFIG
# =============================================================================
APP_NAME=AgentTwitter
APP_ENV=development
APP_VERSION=1.0.0
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0
FRONTEND_PORT=5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# AGENT CONFIG
# =============================================================================
AGENTS_CONFIG_PATH=backend/agents.json
AGENTS_CONFIG_STRICT=false
AGENT_TIMEOUT=30
MAX_THREAD_LENGTH=100
USE_REAL_LLM=true

# =============================================================================
# AUTHORIZATION & OAUTH STATE
# =============================================================================
# Global auth requirement - when true, ALL endpoints require authentication
AUTH_REQUIRED=false

# Write operations require authentication (recommended: true for production)
# This protects POST/PUT/DELETE operations while keeping reads public
AUTH_REQUIRED_FOR_WRITES=true

# OAuth state secret for CSRF protection (defaults to JWT_SECRET_KEY)
OAUTH_STATE_SECRET=

# OAuth state TTL in seconds (how long the state token is valid)
OAUTH_STATE_TTL_SECONDS=600
